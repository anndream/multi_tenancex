<h2>Listing companies</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Image</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for company <- @companies do %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.slug %></td>
      <td><%= company.image %></td>

      <td class="text-right">
        <span><%= link "Show", to: admin_company_path(@conn, :show, company), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: admin_company_path(@conn, :edit, company), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: admin_company_path(@conn, :delete, company), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New company", to: admin_company_path(@conn, :new) %></span>
